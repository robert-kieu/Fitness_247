<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Activity.UserProfile">


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="572dp"
        android:layout_height="758dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_marginStart="243dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="243dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView5"
            android:layout_width="583dp"
            android:layout_height="472dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="30dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="73dp"
                    android:singleLine="true"
                    android:text="Name:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/ed_full_name"
                    android:layout_width="300sp"
                    android:layout_height="60dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginEnd="100dp"
                    android:layout_marginBottom="26dp"
                    android:background="@drawable/log_but"
                    android:ems="10"
                    android:hint="    User Name"
                    android:inputType="textPersonName"
                    android:singleLine="false"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="30dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginEnd="73dp"
                    android:singleLine="true"
                    android:text="Weight (kg):"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/ed_weight"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginEnd="73dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/log_but"
                    android:ems="10"
                    android:hint="    Weight Value"
                    android:inputType="number"
                    android:singleLine="true"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="30dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginEnd="73dp"
                    android:singleLine="true"
                    android:text="Height (cm):"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/ed_height"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginEnd="73dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/log_but"
                    android:ems="10"
                    android:hint="    Height Value"
                    android:inputType="number"
                    android:singleLine="true"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="120sp"
                    android:layout_height="30dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginEnd="73dp"
                    android:singleLine="true"
                    android:text="BMI:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tv_bmi"
                    android:layout_width="300sp"
                    android:layout_height="60dp"
                    android:layout_gravity="clip_vertical"
                    android:layout_marginStart="150dp"
                    android:layout_marginEnd="73dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/log_but"
                    android:hint="   BMI Value"
                    android:singleLine="true"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints" />

                <CalendarView
                    android:id="@+id/calendarView3"
                    android:layout_width="match_parent"
                    android:layout_height="291dp" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_logout"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="285dp"
                    android:layout_height="60dp"
                    android:background="@drawable/log_but"
                    android:backgroundTint="#F5D529"
                    android:text="LOGOUT"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/btn_update"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="281dp"
                    android:layout_height="60dp"
                    android:background="@drawable/log_but"
                    android:backgroundTint="#F5D529"
                    android:text="UPDATE"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layout_01"
        android:layout_width="592dp"
        android:layout_height="0dp"
        android:layout_weight="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:backgroundTint="#EDEDED"
            app:fabCradleMargin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/home_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/bottom_btn1" />

                    <TextView
                        android:id="@+id/bottom_bar_button_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textAlignment="center"
                        android:textColor="#676767"
                        android:textSize="20sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView_pro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/bottom_btn2" />

                    <TextView
                        android:id="@+id/bottom_bar_button_pro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textAlignment="center"
                        android:textColor="#676767"
                        android:textSize="20sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/imageView_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/bottom_btn1" />

                    <TextView
                        android:id="@+id/bottom_bar_button_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textAlignment="center"
                        android:textColor="#676767"
                        android:textSize="20sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/support_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView_supports"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/bottom_btn3" />

                    <TextView
                        android:id="@+id/bottom_bar_button_supports"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Support"
                        android:textAlignment="center"
                        android:textColor="#676767"
                        android:textSize="20sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settings_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/bottom_btn4" />

                    <TextView
                        android:id="@+id/bottom_bar_button_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textAlignment="center"
                        android:textColor="#676767"
                        android:textSize="20sp"

                        />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/article_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_light"
            android:elevation="3dp"
            android:src="@drawable/bottom_bar_article_button"
            android:tint="#FFFFFF"
            app:backgroundTint="@android:color/holo_red_light"
            app:layout_anchor="@+id/app_bar"
            app:maxImageSize="40dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>